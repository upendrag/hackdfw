<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.utdallas.hack.buyforme.MainActivity" 
    android:background="#00B0F0" >
    
    <Space  android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"></Space>
     
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
    <EditText android:id="@+id/countryCodeInput"
        android:text="@string/default_country_code"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:maxLength="4"
        android:hint="@string/default_country_code" 
        />    	    	
    <EditText 
        android:id="@+id/phoneNumInput"
        android:hint="@string/phone_hint"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:maxLength="10"    
        android:inputType="number|phone">
        <requestFocus/>
    </EditText>
    </LinearLayout>
	<Space  android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="10dp"></Space>
    <Button
        android:id="@+id/verifyPhoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="@string/verify_phone_button_text"
        
        android:textColor="#FFFFFF"
		android:textSize="20sp" 
		android:fontFamily="verdana"
        android:background="@drawable/button_shape"/>
    <Space android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"></Space>
    <ImageButton android:layout_height="wrap_content"
        android:layout_width="wrap_content" 
        android:src="@drawable/new_facebook_logo"
        android:contentDescription="@string/fb_logo_cd"
        android:background="@null"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        />
    <Space android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"></Space>
    <ImageButton android:layout_height="wrap_content"
        android:layout_width="wrap_content" 
        android:src="@drawable/sign_in_with_google"
        android:contentDescription="@string/fb_logo_cd"
        android:background="@null"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        />
    
</LinearLayout>
